<resources>

    <style name="Theme.STEPY" parent="Theme.Material3.Dark.NoActionBar">

        <!-- SYSTEM WINDOW COLOR -->
        <item name="android:windowBackground">#1A2632</item>

        <!-- SYSTEM BAR COLOR -->
        <item name="android:statusBarColor">@android:color/transparent</item>

        <!-- SYSTEM NAVIGATION BAR COLOR -->
        <item name="android:navigationBarColor">#043744</item>
    </style>

    <!-- START SCREENS -->

    <!-- TEXT STYLE -->

    <style name="CustomStartText" parent="Widget.MaterialComponents.TextView">

        <item name="android:layout_marginHorizontal">20dp</item>
        <item name="android:layout_marginVertical">50dp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- BUTTON STYLE -->

    <style name="CustomStartButton" parent="Widget.MaterialComponents.Button">

        <item name="android:layout_marginBottom">30dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:backgroundTint">#043744</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textStyle">bold</item>
        <item name="cornerRadius">70dp</item>
    </style>

    <!-- MAIN -->

    <!-- BOTTOM NAVIGATION VIEW -->

    <style name="CustomBottomNav" parent="Widget.MaterialComponents.BottomNavigationView">

        <item name="labelVisibilityMode">unlabeled</item>
        <item name="backgroundTint">#043744</item>
        <item name="itemIconTint">#FFFFFF</item>
        <item name="itemIconSize">30dp</item>
    </style>

    <!-- HOME -->

    <!-- SUCCESS PROGRESS STYLE -->

    <style name="CustomSuccessProgress" parent="Widget.MaterialComponents.CircularProgressIndicator">

        <item name="trackCornerRadius">20dp</item>
        <item name="indicatorColor">#043744</item>
        <item name="android:rotation">-180</item>
        <item name="indicatorSize">30dp</item>
        <item name="trackThickness">3dp</item>
        <item name="trackColor">#A3D6E1</item>
    </style>

    <!-- STEP PROGRESS STYLE -->

    <style name="CustomProgress" parent="Widget.MaterialComponents.CircularProgressIndicator">

        <item name="trackCornerRadius">100dp</item>
        <item name="indicatorColor">#043744</item>
        <item name="android:rotation">-180</item>
        <item name="indicatorSize">300dp</item>
        <item name="trackThickness">30dp</item>
        <item name="trackColor">#F0F4F5</item>
    </style>

    <!-- CUSTOM VERTICAL PROGRESS -->

    <style name="CustomVerticalProgress" parent="Widget.MaterialComponents.LinearProgressIndicator">
        <item name="android:progressDrawable">@drawable/custom_progress_dark</item>
        <item name="android:indeterminateOnly">false</item>
    </style>

    <!-- USER -->

    <!-- CUSTOM BUTTON -->

    <style name="CustomButton" parent="Widget.MaterialComponents.Button">

        <item name="android:textColor">#FFFFFF</item>
        <item name="backgroundTint">#1A2632</item>
        <item name="cornerRadius">70dp</item>
    </style>

    <!-- CUSTOM SWITCH -->

    <style name="CustomSwitch" parent="Widget.MaterialComponents.Button">

        <item name="thumbTint">#D9D9D9</item>
        <item name="trackTint">#1A2632</item>
    </style>

    <!-- COMMON USES IN THE APP -->

    <!-- CARD VIEW -->

    <style name="CustomCardview" parent="Widget.MaterialComponents.CardView">

        <item name="android:backgroundTint">#043744</item>
        <item name="cardCornerRadius">15dp</item>
        <item name="cardElevation">4dp</item>
    </style>

    <!-- TEXT VIEW -->

    <style name="CustomText" parent="Widget.MaterialComponents.TextView">

        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- INPUT LAYOUT -->

    <style name="CustomInput" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">

        <item name="boxCornerRadiusBottomStart">8dp</item>
        <item name="boxCornerRadiusBottomEnd">8dp</item>
        <item name="boxCornerRadiusTopStart">8dp</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
        <item name="boxStrokeColor">#FFFFFF</item>
        <item name="hintTextColor">#FFFFFF</item>
        <item name="endIconMode">clear_text</item>
    </style>

</resources>
